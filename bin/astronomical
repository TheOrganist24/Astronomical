#!/usr/bin/env python3


import getopt
import sys
import astronomical


def main(argv):
    try:
        opts, args = getopt.getopt(argv, "v", ["version"])
    except getopt.GetoptError:
        print("Nope")
        sys.exit(2)
    for opt, arg in opts:
        if opt in ("-v", "--version"):
            print(astronomical.__version__)


if __name__ == "__main__":
    main(sys.argv[1:])
