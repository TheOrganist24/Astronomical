#!/usr/bin/env python3


import getopt
import sys
import astronomical
from astronomical import defaults


def main(argv):
    try:
        opts, args = getopt.getopt(argv, "vs", ["version", "sun"])
    except getopt.GetoptError:
        print("Nope")
        sys.exit(2)
    for opt, arg in opts:
        if opt in ("-v", "--version"):
            print(astronomical.__version__)
        elif opt in ("-h", "--help"):
            # print out help content
            print("help")
        elif opt in ("-s", "--sun"):
            # print out sun facts: rise/set, elevation/azmituh, distance
            print("sun")
        elif opt in ("-t", "--time"):
            # print out time facts: Current time, TO24 time
            print("time")
        elif opt in ("-a", "--alarms"):
            # print out alarms for tonight and tomorrow morning
            print("alarms")


if __name__ == "__main__":
    main(sys.argv[1:])
